<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        style="@style/list_image_image_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/list_text_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/default_margin_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_item"
                style="@style/list_first_text_view" />

            <TextView
                android:id="@+id/second_item"
                style="@style/list_second_text_view" />
        </LinearLayout>

        <ImageView
            android:id="@+id/icon_right"
            style="@style/list_icon_image_view"
            android:src="@drawable/ic_map" />

    </RelativeLayout>
</LinearLayout>